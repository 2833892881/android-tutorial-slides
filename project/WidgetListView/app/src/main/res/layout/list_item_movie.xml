<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:padding="10dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/list_item_icon_chevron_right"
    android:layout_alignParentEnd="true"
    android:contentDescription="@string/image_chevron_right"
    android:src="@drawable/icon_chevron_right"
    android:layout_width="10dp"
    android:layout_height="wrap_content" />

  <TextView
    android:maxLines="1"
    android:ellipsize="end"
    android:id="@+id/list_item_label_title"
    android:text="@string/item_title_placeholder"
    android:layout_centerVertical="true"
    android:textColor="@color/purple_500"
    android:layout_toStartOf="@id/list_item_icon_chevron_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</RelativeLayout>